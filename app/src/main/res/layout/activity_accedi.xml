<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondoA"
    tools:context=".AccediActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="308dp"
        android:layout_height="58dp"
        android:fontFamily="serif"
        android:text="@string/recipes_finder"
        android:textColor="#C9F8F3F1"
        android:textSize="48sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <Button
        android:id="@+id/buttonA2"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="156dp"
        android:layout_height="71dp"
        android:text="@string/button_accedi"
        app:backgroundTint="#BFD34208"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.766" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="352dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextUserEmail"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:hint="@string/editText_hint_username"
            android:inputType="textEmailAddress"
            android:textColorHint="#FF000000"
            android:visibility="visible"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="369dp" />

        <EditText
            android:id="@+id/editTextPassword"
            android:layout_width="316dp"
            android:layout_height="50dp"
            android:hint="@string/editText_hint_password"
            android:inputType="textPassword"
            android:textColorHint="#FF000000"
            tools:layout_editor_absoluteX="58dp"
            tools:layout_editor_absoluteY="440dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


