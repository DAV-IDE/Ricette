<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CercaRicetteActivity"
    android:background="@drawable/sfondo"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewBenv"
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:fontFamily="serif"
        android:text="@string/titolo_cerca"
        android:textAlignment="center"
        android:textColor="@color/gradient_white"
        android:textSize="26.4sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:queryHint="Cerca ingrediente"
        app:layout_constraintTop_toBottomOf="@+id/textViewBenv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/multiple_list_view" />

    <ListView
        android:id="@+id/multiple_list_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:cacheColorHint="@color/white"
        android:choiceMode="multipleChoice"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />


</androidx.constraintlayout.widget.ConstraintLayout>