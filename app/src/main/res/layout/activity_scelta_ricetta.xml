<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sfondo"
    tools:context=".SceltaRicettaActivity">

    <TextView
        android:id="@+id/textViewTitolo3"
        android:layout_width="327dp"
        android:layout_height="76dp"
        android:fontFamily="serif"
        android:text="@string/titolo_scelta_ricetta"
        android:textAlignment="center"
        android:textColor="@color/gradient_white"
        android:textSize="26.4sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"/>

        <FrameLayout
            android:layout_width="380dp"
            android:layout_height="180dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTitolo3"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
