<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp">

    <TextView
        android:id="@+id/textViewIngredientsDB"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:gravity="center_vertical|start"
        android:background="@drawable/ingredient_border"
        app:layout_constraintEnd_toStartOf="@+id/textViewQuantityDB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewShowIngredients"
        app:layout_constraintWidth_percent="0.5" />

    <TextView
        android:id="@+id/textViewQuantityDB"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:gravity="center_vertical|start"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:background="@drawable/ingredient_border"
        app:layout_constraintEnd_toEndOf="@id/textViewUnitMisuraDB"
        app:layout_constraintStart_toEndOf="@+id/textViewIngredientsDB"
        app:layout_constraintTop_toBottomOf="@id/textViewShowQuantity"
        app:layout_constraintWidth_percent="0.5"/>

    <TextView
        android:id="@+id/textViewUnitMisuraDB"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center_vertical|start"
        android:textSize="20dp"
        android:background="@drawable/ingredient_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textViewQuantityDB"
        app:layout_constraintTop_toBottomOf="@id/textViewShowQuantity"
        app:layout_constraintWidth_percent="0.5"/>
</LinearLayout>
